{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file with tester",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/${fileBasenameNoExtension}_test${fileExtname}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build active file along with matching _test file."
        }
    ],
    "version": "2.0.0"
}